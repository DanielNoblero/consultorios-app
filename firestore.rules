rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- FUNCIONES ---
    function isLoggedIn() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return isLoggedIn() && request.auth.uid == uid;
    }

    function isAdmin() {
      return isLoggedIn() &&
        get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data.rol == "admin";
    }

    // --- USUARIOS ---
    match /usuarios/{uid} {

      // Crear solo su propio documento
      allow create: if isOwner(uid);

      // Leer: su propio perfil o admin
      allow read: if isOwner(uid) || isAdmin();

      // Actualizar: dueño (excepto rol) o admin
      allow update: if
        (
          isOwner(uid) &&
          !("rol" in request.resource.data.diff(resource.data).changedKeys())
        )
        || isAdmin();

      allow delete: if false;
    }

    // --- CONFIGURACIÓN (precioConsulta) ---
    match /configuracion/{docId} {
      allow read: if isLoggedIn();     // psicólogos y admin leen
      allow write: if isAdmin();       // solo admin modifica
    }

    // --- RESERVAS ---
    match /reservas/{reservaId} {

      // Crear: solo si el psicólogo dueño crea su propia reserva
      allow create: if isLoggedIn() &&
                    request.resource.data.psicologoId == request.auth.uid;

      // Leer: cualquier usuario autenticado
      allow read: if isLoggedIn();

      // Actualizar y borrar: dueño o admin
      allow update, delete: if isLoggedIn() &&
               (request.auth.uid == resource.data.psicologoId || isAdmin());
    }

    // --- TABLA ADMIN ---
    match /admin/{docId} {
      allow read, write: if isAdmin();
    }
  }
}
