rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isLoggedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isLoggedIn() && request.auth.token.rol == "admin";
    }

    // ---------------- USUARIOS ----------------
    match /usuarios/{uid} {

      allow create: if isLoggedIn() && request.auth.uid == uid;

      allow read: if isLoggedIn() &&
                  (request.auth.uid == uid || isAdmin());

      allow update: if
        (
          isLoggedIn() &&
          request.auth.uid == uid &&
          !( "rol" in request.resource.data.diff(resource.data).changedKeys() )
        )
        || isAdmin();

      allow delete: if false;
    }

    // ---------------- CONFIGURACION ----------------
    match /configuracion/{docId} {
      allow read: if isLoggedIn();
      allow write: if isAdmin();
    }

    // ---------------- RESERVAS ----------------
    match /reservas/{reservaId} {

  // Crear solo su propia reserva
  allow create: if isLoggedIn()
                && request.resource.data.usuarioId == request.auth.uid;

  // Leer: cualquier usuario autenticado puede ver reservas
  allow read: if isLoggedIn();

  // Actualizar / eliminar: due√±o o admin
  allow update, delete: if isLoggedIn() &&
              (request.auth.uid == resource.data.usuarioId || isAdmin());
}

    match /admin/{docId} {
      allow read, write: if isAdmin();
    }
  }
}
