rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- FUNCIONES ---
    function isLoggedIn() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return isLoggedIn() && request.auth.uid == uid;
    }

    function isAdmin() {
      return isLoggedIn() &&
        get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data.rol == "admin";
    }

     // --- USUARIOS ---
    match /usuarios/{uid} {

      // Crear solo su propio documento
      allow create: if isOwner(uid);

      // 游댠 Leer: cualquier usuario autenticado
      // Necesario para que /reservas pueda mostrar iniciales de otros psic칩logos
      allow read: if isLoggedIn();

      // Actualizar: due침o (excepto rol) o admin
      allow update: if
        (
          isOwner(uid) &&
          !("rol" in request.resource.data.diff(resource.data).changedKeys())
        )
        || isAdmin();

      // Nunca borrar usuarios desde el frontend
      allow delete: if false;
    }

    // --- CONFIGURACI칍N (precioConsulta) ---
    match /configuracion/{docId} {
      allow read: if isLoggedIn();     // psic칩logos y admin leen
      allow write: if isAdmin();       // solo admin modifica
    }

    // --- RESERVAS ---
    match /reservas/{reservaId} {

      // Crear: solo si el psic칩logo due침o crea su propia reserva
      allow create: if isLoggedIn() &&
                    request.resource.data.psicologoId == request.auth.uid;

      // Leer: cualquier usuario autenticado
      allow read: if isLoggedIn();

      // Actualizar y borrar: due침o o admin
      allow update, delete: if isLoggedIn() &&
               (request.auth.uid == resource.data.psicologoId || isAdmin());
    }

    // --- TABLA ADMIN ---
    match /admin/{docId} {
      allow read, write: if isAdmin();
    }
  }
}
