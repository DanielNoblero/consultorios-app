rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --------------------------------------------------
    // FUNCIONES
    // --------------------------------------------------
    function isLoggedIn() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return isLoggedIn() && request.auth.uid == uid;
    }

    function isAdmin() {
      return isLoggedIn()
        && exists(/databases/$(database)/documents/usuarios/$(request.auth.uid))
        && get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data.rol == "admin";
    }

    // --------------------------------------------------
    // USUARIOS
    // --------------------------------------------------
    match /usuarios/{uid} {

      allow create: if isOwner(uid);

      allow read: if isLoggedIn();

      allow update: if
        (
          isOwner(uid) &&
          !("rol" in request.resource.data.diff(resource.data).changedKeys())
        )
        || isAdmin();

      allow delete: if false;
    }

    // --------------------------------------------------
    // CONFIGURACI√ìN
    // --------------------------------------------------
    match /configuracion/{docId} {
      allow read: if isLoggedIn();
      allow write: if isAdmin();
    }

    // --------------------------------------------------
    // RESERVAS
    // --------------------------------------------------
    match /reservas/{reservaId} {

      allow create: if isLoggedIn()
        && request.resource.data.psicologoId == request.auth.uid;

      allow read: if isLoggedIn();

      allow update, delete: if isLoggedIn()
        && (
          request.auth.uid == resource.data.psicologoId
          || isAdmin()
        );
    }

    // --------------------------------------------------
    // PANEL ADMIN
    // --------------------------------------------------
    match /admin/{docId} {
      allow read, write: if isAdmin();
    }

    // --------------------------------------------------
    // BACKUP DE RESERVAS ELIMINADAS
    // --------------------------------------------------
    match /reservas_backup/{backupId} {

      // üîê Solo admin puede leer backups
      allow read: if isAdmin();

      // ‚úçÔ∏è Se crean autom√°ticamente al borrar reservas
      allow create: if isLoggedIn();

      // üü° Solo admin puede marcar como restaurado
      allow update: if isAdmin();

      // ‚ùå Nunca se borran
      allow delete: if false;
    }
  }
}
