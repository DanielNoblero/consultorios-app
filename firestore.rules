rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isLoggedIn() {
      return request.auth != null;
    }

    // ðŸ”¥ NECESARIA PARA CREAR USUARIOS
    function isOwner(uid) {
      return isLoggedIn() && request.auth.uid == uid;
    }

    function isAdmin() {
      return isLoggedIn() &&
        get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data.rol == "admin";
    }

    // --------------- USUARIOS ----------------
    match /usuarios/{uid} {

      // ðŸ”¥ Crear solo su propio documento
      allow create: if isOwner(uid);

      // Leer: dueÃ±os o admins
      allow read: if isOwner(uid) || isAdmin();

      // Actualizar: dueÃ±o (sin rol) o admin
      allow update: if
        (
          isOwner(uid) &&
          !("rol" in request.resource.data.diff(resource.data).changedKeys())
        )
        || isAdmin();

      allow delete: if false;
    }

    // --------------- CONFIG ----------------
    match /configuracion/{docId} {
      allow read: if isLoggedIn();
      allow write: if isAdmin();
    }

    // --------------- RESERVAS ----------------
    match /reservas/{reservaId} {

      allow create: if isLoggedIn() &&
                    request.resource.data.psicologoId == request.auth.uid;

      allow read: if isLoggedIn();

      allow update, delete: if isLoggedIn() &&
               (request.auth.uid == resource.data.psicologoId || isAdmin());
    }

    // --------------- ADMIN PANEL ----------------
    match /admin/{docId} {
      allow read, write: if isAdmin();
    }
  }
}
